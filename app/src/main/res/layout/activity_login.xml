<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fire.half_blood_prince.myapplication.login.Login">

    <android.support.v4.view.ViewPager
        android:id="@+id/ac_login_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ac_login_cv">

    </android.support.v4.view.ViewPager>

    <android.support.v7.widget.CardView
        android:id="@+id/ac_login_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="0dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ac_login_tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/TinyTextView"
                android:padding="4dp"
                android:hint="@string/message" />

            <TextView
                android:id="@+id/ac_login_tv_action_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginBottom="4dp"
                style="@style/ButtonStyle"
                android:text="@string/action_message" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
