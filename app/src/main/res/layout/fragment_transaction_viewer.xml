<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ExpandableListView
        android:id="@+id/ac_ha_elv_transaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frag_trans_viewer_cv">

    </ExpandableListView>

    <android.support.v7.widget.CardView
        android:id="@+id/frag_trans_viewer_cv"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="0dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/frag_trans_viewer_tv_add_expense"
                style="@style/BigTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="-"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />

            <TextView
                android:id="@+id/frag_trans_viewer_tv_balance"
                style="@style/NormalTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:text="0.0" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dividerColor" />


            <TextView
                android:id="@+id/frag_trans_viewer_tv_add_income"
                style="@style/BigTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="+"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
